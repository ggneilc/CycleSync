<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/items_container"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="inventory_testing" />

        <ImageView
            android:id="@+id/back_arrow_very_unique"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:contentDescription="Back Arrow"
            android:gravity="center"
            android:src="@drawable/back_arrow" />

        <TextView
            android:id="@+id/inventoryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/inventory_title"
            android:textSize="40dp"
            android:textColor="@android:color/black"
            android:layout_marginTop="-25dp"
            android:gravity="center"
            android:layout_gravity="center" />

        <Button
            android:id="@+id/addBike"
            style="@style/GreenButton"
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:text="Add Bike"
            android:layout_marginTop="50dp"
            android:textSize="20dp"
            android:fontFamily="@font/poppins_bold"
            android:textFontWeight="500"
            android:textColor="#FFFFFF"
            android:stateListAnimator="@null"
            android:textAllCaps="false"
            android:background="@drawable/green_button_rounded"
            android:layout_gravity="center"/>




    </LinearLayout>
</ScrollView>
